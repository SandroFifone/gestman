# Configurazione ambiente per GESTMAN Backend
# File: backend/.env.production

# Ambiente
FLASK_ENV=production
FLASK_DEBUG=False

# Server
HOST=127.0.0.1
PORT=5000

# Database
DATABASE_PATH=/opt/gestman/data/gestman.db
COMPILAZIONI_DATABASE_PATH=/opt/gestman/data/compilazioni.db

# Upload directory
UPLOAD_FOLDER=/opt/gestman/uploads

# Sicurezza
SECRET_KEY=your-secret-key-change-this-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/gestman/logs/gestman.log

# Backup
BACKUP_DIR=/opt/gestman/backups
BACKUP_RETENTION_DAYS=30